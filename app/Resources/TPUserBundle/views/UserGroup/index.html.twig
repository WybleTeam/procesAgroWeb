{% extends 'TPUserBundle::base.html.twig' %}

{% block body -%}
    <h1>Listado de Grupos de usuario</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Nombre</th>
                {#<th>Roles</th>#}
                <th>Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tp_usergroup_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                {#<td>{{ entity.roles }}</td>#}
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tp_usergroup_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('tp_usergroup_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tp_usergroup_new') }}">
                Crear nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
