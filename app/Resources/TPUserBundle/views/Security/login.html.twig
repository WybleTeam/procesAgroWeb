{% extends 'TPUserBundle::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
{% block fos_user_content %}
    
    <a class="close-reveal-modal" style="font-size:30px; font-weight:bold; position:absolute;right:10px;top:0px">&#215;</a>
    <hr>
    <p class="lead">Por tu seguridad digita tu contrase침a nuevamente {% if error %} y tu email{% endif %}</p>
    <hr>
    {% if error %}
        <div class="alert alert-danger"><strong>Deber치s volver a digitar tu correo y contrase침a, {{ error|trans }}</strong></div>
    {% endif %}
    <form id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"  />
        <div class="row">
            <div class="small-3 columns">
                <label for="username" class="left inline">Correo electr칩nico</label>
            </div>
            <div class="small-9 columns">
                <input type="text" id="username" name="_username" value="{{ app.request.attributes.get('usuario') }}" required="required" placeholder="Digita tu correo"/>
            </div>
        </div>
        <div class="row">
            <div class="small-3 columns">
                <label for="password" class="left inline">{{ 'security.login.password'|trans|upper }}</label>
            </div>
            <div class="small-9 columns">
                <input type="password" id="password" name="_password" required="required"  placeholder="Digita tu password" autofocus/>
            </div>
        </div>
        <div class="row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="left inline rememberme"/>
            <label for="remember_me" class="rememberme">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="row">
            <input  type="submit" id="_submit" class="button round large expand"  value="{{ 'security.login.submit'|trans|upper }}"></input>
        </div>
    </form>
{% endblock fos_user_content %}
{% endblock body %}