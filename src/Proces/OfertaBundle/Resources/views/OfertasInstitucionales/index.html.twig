{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
       <div class="panel panel-default">
           <div class="panel-heading"><h3 class="panel-title">Listado de Ofertas Institucionales</h3></div>
<div class="panel-body">
   
            <a href="{{ path('ofertasinstitucionales_new') }}"  class="btn btn-info"><span class="glyphicon glyphicon-ok"></span>
                Crear nueva
            </a>
                <hr>
     <div class="table-responsive">
  <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Título oferta</th>
                <th>Descripción oferta</th>
                <th>Url audio oferta</th>
                <th>Url oferta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ofertasinstitucionales_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.tituloOferta }}</td>
                <td>{{ entity.descripcionOferta }}</td>
                <td><a href="{{ entity.urlAudioOferta }}" target="_blank" class="btn btn-info"><span class="glyphicon glyphicon-headphones"></span></a></td>
                <td><a href="{{ entity.urlOferta }}" target="_blank" class="btn btn-success"><span class="glyphicon glyphicon-globe"></span></td>
                <td>
                <ul>
                        <a href="{{ path('ofertasinstitucionales_show', { 'id': entity.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></a>
                        <a href="{{ path('ofertasinstitucionales_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
 </div>
         </div>
        
    {% endblock %}
{% block javascripts %}
    {{ parent() }}
    
    
   <script type="text/javascript">
            $(function() {
                $("#example1").dataTable({
                    "bSort": false,
                    "bAutoWidth": true
                });
                $('#example2').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>
{% endblock %}    