{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
       <div class="panel panel-default">
           <div class="panel-heading"><h3 class="panel-title">Listado de Ofertas Institucionales</h3></div>
<div class="panel-body">
   
            <a href="{{ path('ofertasinstitucionales_new') }}"  class="btn btn-info"><span class="glyphicon glyphicon-ok"></span>
                Crear nueva
            </a>
 <div class="table-responsive">
   <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Título oferta</th>
                <th>Descripción oferta</th>
                <th>Url audio oferta</th>
                <th>Url oferta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ofertasinstitucionales_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.tituloOferta }}</td>
                <td>{{ entity.descripcionOferta }}</td>
                <td><a href="{{ entity.urlAudioOferta }}" target="_blank">{{ entity.urlAudioOferta }}</a></td>
                <td><a href="{{ entity.urlOferta }}" target="_blank">{{ entity.urlOferta }}</td>
                <td>
                <ul>
                        <a href="{{ path('ofertasinstitucionales_show', { 'id': entity.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></a>
                        <a href="{{ path('ofertasinstitucionales_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
 </div>
         </div>
        
    {% endblock %}
