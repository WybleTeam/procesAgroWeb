{% extends 'ThemesBundle::backend.html.twig' %}
{% block body -%}
    <h1>Listado de Oficinas</h1>

    
        <a href="{{ path('oficinas_new') }}" class="btn btn-info">
            <span class="glyphicon glyphicon-ok"></span> Crear nueva
        </a>
    
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombreoficina</th>
                <th>Direccionoficina</th>
                <th>Descripcionoficina</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('oficinas_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.nombreOficina }}</td>
                <td>{{ entity.direccionOficina }}</td>
                <td>{{ entity.descripcionOficina }}</td>
                <td>
               
                        <a href="{{ path('oficinas_show', { 'id': entity.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></a>
                    
                        <a href="{{ path('oficinas_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
