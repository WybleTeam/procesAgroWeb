{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
    <h1>Departamento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombredepartamento</th>
                <td>{{ entity.nombreDepartamento }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('departamento') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <a href="{{ path('departamento_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
