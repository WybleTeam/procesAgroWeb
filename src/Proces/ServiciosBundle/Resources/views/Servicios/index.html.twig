{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
    <h1>Listado de Servicios</h1>

      <a href="{{ path('servicios_new') }}" class="btn btn-info"><span class="glyphicon glyphicon-ok"></span>
                Crear nuevo
            </a>
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Titulo Servicio</th>
                <th>Descripcion Servicio</th>
                <th>Url audio servicio</th>
                <th>Url servicio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('servicios_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.tituloServicio }}</td>
                <td>{{ entity.descripcionServicio }}</td>
                 <td><a href="{{ entity.urlAudioServicio }}" target="_blank">{{ entity.urlAudioServicio }}</a></td>
                <td><a href="{{ entity.urlServicio }}" target="_blank">{{ entity.urlServicio }}</a></td>
                <td>
               
                        <a href="{{ path('servicios_show', { 'id': entity.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></a>
                   
                        <a href="{{ path('servicios_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     
    {% endblock %}
