{% extends 'ThemesBundle::plantilla2.html.twig' %}
{% block body %}

 <div class="panel panel-default">
     <div class="panel-heading"><h3 class="panel-title">Convocatorias</h3></div>
            <div class="panel-body">
                <div class="table-responsive">
  <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No. </th>
                 <th>Título</th>
                <th>Descripción</th>
                <th>Url audio</th>
                <th>Url convocatoria</th>
                <th>Descripción larga</th>
                
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.tituloConvocatoria }}</td>                
                <td>{{ entity.descripcion }}</td>
                <td><form method="post" action="{{ path('web_paginas') }}">
                        <input type="hidden" name="pagina" value="{{ entity.urlAudio }}" /><button class="btn btn-info"><span class="glyphicon glyphicon-headphones"></span></button>
                    </form>
                </td>
                <td align="center">
                    <form method="post" action="{{ path('web_paginas') }}">
                        <input type="hidden" name="pagina" value="{{  entity.urlConvocatoria }}" /><button class="btn btn-success"><span class="glyphicon glyphicon-globe"></span></button>
                    </form>
                  
                <td>{{ entity.descripcionLarga }}</td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
            </div>
 </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

      <script src="{{ asset('bundles/themes/js/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/themes/js/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
   
   <script type="text/javascript">
            $(function() {
                $("#example1").dataTable({
                    "bAutoWidth": true
                });
                $('#example2').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>
{% endblock %}    