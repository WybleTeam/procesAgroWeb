{% extends 'ThemesBundle::plantilla2.html.twig' %}
{% block body %}


  <table class="table">
        <thead>
            <tr>
                <th>No. </th>
                <th>Descripcion</th>
                <th>Url convocatoria</th>
                <th>Descripcion larga</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('convocatorias_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td><a href="{{ entity.urlConvocatoria }}" target="_blank">{{ entity.urlConvocatoria }}</a></td>
                <td>{{ entity.descripcionLarga }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('convocatorias_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('convocatorias_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}