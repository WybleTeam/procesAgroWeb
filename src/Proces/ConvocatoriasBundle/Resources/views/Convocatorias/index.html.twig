{% extends 'ThemesBundle::backend.html.twig' %}
{% block body -%}
    <h1>Listado de Convocatorias</h1>

    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Título Convocatoria</th> 
                <th>Descripción</th>
                <th>Url convocatoria</th>
                <th>Descripción larga</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('convocatorias_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.tituloConvocatoria }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.urlConvocatoria }}</td>
                <td>{{ entity.descripcionLarga }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('convocatorias_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('convocatorias_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('convocatorias_new') }}">
                Crear nueva
            </a>
        </li>
    </ul>
    {% endblock %}
