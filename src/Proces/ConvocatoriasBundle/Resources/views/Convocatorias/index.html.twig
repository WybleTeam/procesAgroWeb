{% extends 'ThemesBundle::backend.html.twig' %}
{% block body -%}
            <div class="panel panel-default">
            
            
                <div class="panel-heading"><h3 class="panel-title">Listado de Convocatorias</h3></div>
  	        <div class="panel-body"> 
            <a href="{{ path('convocatorias_new') }}" class="btn btn-info"><span class="glyphicon glyphicon-ok"></span>
                Crear nueva
            </a>
                <hr>
               <div class="table-responsive">
  <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No.</th>
                <th>Título Convocatoria</th> 
                <th>Descripción</th>
                <th>Url audio</th>
                <th>Url convocatoria</th>
                <th>Descripción larga</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('convocatorias_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.tituloConvocatoria }}</td>
                <td>{{ entity.descripcion }}</td>
                <td><a href="{{ entity.urlAudio }}" target="_blank" class="btn btn-info"><span class="glyphicon glyphicon-headphones"></span></a></td>
                <td><a href="{{ entity.urlConvocatoria }}" target="_blank" class="btn btn-success"><span class="glyphicon glyphicon-globe"></span></a></td>
                <td>{{ entity.descripcionLarga }}</td>
                <td>
                
                        <a href="{{ path('convocatorias_show', { 'id': entity.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></a>
                    
                        <a href="{{ path('convocatorias_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
        
                </div>
            </div>
      
    {% endblock %}
{% block javascripts %}
    {{ parent() }}
    
       
   <script type="text/javascript">
            $(function() {
                $("#example1").dataTable({
                    "bSort": false,
                    "bAutoWidth": true
                });
                $('#example2').dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bSort": true,
                    "bInfo": true,
                    "bAutoWidth": false
                });
            });
        </script>
{% endblock %}    