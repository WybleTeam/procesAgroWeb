{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
    <h1>Convocatorias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Url convocatoria</th>
                <td>{{ entity.urlConvocatoria }}</td>
            </tr>
            <tr>
                <th>Descripcion larga</th>
                <td>{{ entity.descripcionLarga }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('convocatorias') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <a href="{{ path('convocatorias_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
