{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
    <h1>Listado de Cursos Virtuales</h1>

    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre curso</th>
                <th>Descripcion curso</th>
                <th>Url audio</th>
                <th>Url curso</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cursosvirtuales_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.nombreCurso }}</td>
                <td>{{ entity.descripcionCurso }}</td>
               <td><a href="{{ entity.urlAudio }}" target="_blank">{{ entity.urlAudio }}</a></td>
                <td><a href="{{ entity.urlCurso }}" target="_blank">{{ entity.urlCurso }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cursosvirtuales_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('cursosvirtuales_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cursosvirtuales_new') }}">
                Crear nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
