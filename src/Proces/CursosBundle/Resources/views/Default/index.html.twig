{% extends 'ThemesBundle::plantilla2.html.twig' %}
{% block body %}
      <div class="panel panel-default">
     <div class="panel-heading"><h3 class="panel-title">Oferta Institucional</h3></div>
            <div class="panel-body">
                <div class="table-responsive">  
      <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombre curso</th>
                <th>Descripcion curso</th>
                <th>Url audio</th>
                <th>Url curso</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.nombreCurso }}</td>
                <td>{{ entity.descripcionCurso }}</td>
                <td><a href="{{ entity.urlAudio }}" target="_blank"  class="btn btn-info"><span class="glyphicon glyphicon-headphones"></span></a></td>
                <td><a href="{{ entity.urlCurso }}" target="_blank"  class="btn btn-success"><span class="glyphicon glyphicon-globe"></span></a></td>
                <td>{% if(entity.estado == 1) %}<button class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></button>{% else %}<button class="btn btn-success"><span class="glyphicon glyphicon-remove"></span></button>{% endif %}</td>
             </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
            </div>
      </div>
{% endblock %}    