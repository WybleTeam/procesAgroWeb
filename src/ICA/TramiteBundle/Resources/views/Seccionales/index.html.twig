{% extends 'ThemesBundle::backend.html.twig' %}

{% block body -%}
    <h1>Listado Seccionales</h1>

    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Nombreseccional</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('seccionales_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.nombreSeccional }}</td>
                <td>{{ entity.estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('seccionales_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('seccionales_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('seccionales_new') }}">
                Crear nueva
            </a>
        </li>
    </ul>
    {% endblock %}
